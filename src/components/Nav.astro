<nav class="p-6 relative">
  <div class="container pr-4 mx-auto flex justify-end items-center lg:justify-center transition duration-[1500ms] ease-in-out relative">
    <!-- Botón del menú hamburguesa/cerrar -->
    <button id="navbar-toggle" class="text-white text-3xl focus:outline-none lg:hidden z-50 relative">
      <svg id="hamburger-icon" xmlns="http://www.w3.org/2000/svg" class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
      <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="size-6 hidden fixed" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Menú responsive -->
    <ul id="navbar-links" class="hidden lg:flex lg:flex-row flex-col justify-center items-center lg:space-x-6 text-white lg:space-y-0 space-y-6 fixed lg:static top-0 left-0 lg:left-auto lg:top-auto bg-[#131313] lg:bg-transparent w-full lg:w-auto h-1/2 lg:h-auto z-40">
      <li><a href="/" class="hover:text-gray-400 text-xl">Inicio</a></li>
      <li><a href="#experience" class="hover:text-gray-400 text-xl">Experiencia</a></li>
      <li><a href="#projects" class="hover:text-gray-400 text-xl">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-gray-400 text-xl">Habilidades</a></li>
      <li><a href="#about" class="hover:text-gray-400 text-xl">Sobre mí</a></li>
    </ul>
  </div>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const toggleButton = document.getElementById('navbar-toggle') as Element;
  const navLinks = document.getElementById('navbar-links') as Element;
  const hamburgerIcon = document.getElementById('hamburger-icon') as Element;
  const closeIcon = document.getElementById('close-icon') as Element;
  const menuLinks = navLinks.querySelectorAll('a'); // Selecciona los enlaces del menú

  // Función para abrir/cerrar el menú
  function toggleMenu() {
    navLinks.classList.toggle('hidden'); // Mostrar/ocultar el menú
    navLinks.classList.toggle('flex');   // Asegurar que se muestre como flex

    // Alternar íconos de menú (hamburguesa / cruz)
    hamburgerIcon.classList.toggle('hidden');
    closeIcon.classList.toggle('hidden');

    // Asegurar que el menú se mantenga fijo al hacer scroll
    if (!navLinks.classList.contains('hidden')) {
      navLinks.classList.add('fixed', 'top-0', 'left-0', 'w-full');
    } else {
      navLinks.classList.remove('fixed', 'top-0', 'left-0', 'w-full');
    }
  }

  // Evento para el botón de toggle
  toggleButton.addEventListener('click', toggleMenu);

  // Evento para cerrar el menú al hacer clic en un enlace
  menuLinks.forEach(link => {
    link.addEventListener('click', function () {
      if (!navLinks.classList.contains('hidden')) {
        toggleMenu();
      }
    });
  });
});
</script>

